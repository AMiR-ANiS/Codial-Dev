<li id="post-<%= post._id %>">
    <p>
        <% if(locals.user && post.user.id == locals.user.id){ %>
            <small>
                <a class="delete-post-button" href="/posts/destroy/<%= post._id %>">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </small>
        <% } %>
        <%= post.content %><br>
        <small>
            <%= post.user.name %>
        </small>
    </p>
    <div class="post-comments">
        <% if(locals.user){ %>
            <form class="new-comment-form" method="POST" action="/comments/create">
                <input type="text" name="content" placeholder="Type comment..." required>
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="Add">
            </form>
        <% } %>
        <div class="post-comments-list">
            <ul id="post-comments-<%= post._id %>">
                <% for(i = post.comments.length-1; i>=0; i--){ %>
                    <%- include('_comment'); -%>
                <% } %>
            </ul>
        </div>
    </div>
</li>
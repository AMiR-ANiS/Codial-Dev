<link rel="stylesheet" type="text/css" href="/css/home.css">
<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
        <form id="new-post-form" method="POST" action="/posts/create">
            <textarea name="content" rows="3" cols="30" placeholder="post something..." required></textarea>
            <input type="submit" value="Post"> 
        </form>
        <% } %>
        <div id="posts-list-container">
            <ul>
                <%- include('_post'); -%>
            </ul>
        </div>
    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for(u of all_users){ %>
            <p>
                <a href="/users/profile/<%= u.id %>">
                    <%= u.name %>
                </a>
            </p>
        <% } %>
    </section>
</div>